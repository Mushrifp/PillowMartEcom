      color: #333;
      margin: 0;
      padding: 0;
    }
  
    .main-wrap {
      padding: 20px;
    }
  
    .content-title {
      text-align: center;
      color: #4CAF50;
      font-size: 2.5em;
      margin-bottom: 20px;
    }
  
    .details-section {
      background-color: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      max-width: 1000px;
      margin: 20px auto;
    }
  
    .btn-custom {
      background-color: #4CAF50;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border-radius: 8px;
      text-align: center;
      transition: background-color 0.3s ease;
      text-decoration: none;
      display: inline-block;
      text-align: center;
    }
  
    .btn-custom:hover {
      background-color: #45a049;
    }
  
