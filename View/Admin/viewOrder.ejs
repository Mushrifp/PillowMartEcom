  <%- include('./layouts/header.ejs') %>
  <main class="main-wrap">
    <section class="content-main">
      <div class="content-header">
        <h2 class="content-title card-title">Order Details</h2>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <div class="details-section">
            <button class="btn-custom">
              <% if(page == "order"){ %>
              <a href="/admin/order" class="btn-link" style="color: white; text-decoration: none;">Go Back</a>
             <%  }else{ %>
              <a href="/admin/dash" class="btn-link" style="color: white; text-decoration: none;">Go Back</a>
               <% } %>
            </button>
          </div>
          
          <div class="details-section">
            <div class="section-header">Order Information</div>
            <div class="details-item">
              <strong>Ordered:</strong> <%= obj.ordered %>
            </div>
            <div class="details-item">
              <strong>Delivery:</strong> <%= obj.delivery %>
            </div>
            <div class="details-item">
              <strong>Title:</strong> <%= obj.title %>
            </div>
            <div class="details-item">
              <strong>Description:</strong> <%= obj.description %>
            </div>
            <div class="details-item">
              <strong>Price:</strong> $<%= obj.price %>
            </div>
            <div class="details-item">
              <strong>Quantity:</strong> <%= obj.quantity %>
            </div>
              <strong>Category:</strong> <%= obj.category %>
            </div>
            <div class="details-item">
              <strong>Size:</strong> <%= obj.size %>
            </div>
          </div>
          
          <div class="details-section">
            <div class="details-item">
              <strong>Cash:</strong> $<%= obj.cash %>
            </div>
            <div class="details-item">
              <strong>Payment Method:</strong> <%= obj.paymentMethod %>
            </div>
            <div class="details-item">
              <strong>Payment Status:</strong> <%= obj.paymentStatus ? 'Paid' : 'Not paid' %> %>
            </div>
            <div class="details-item">
              <strong>Status:</strong>
              <span class="status <%= obj.status === 'Pending' ? 'status-pending' : (obj.status === 'Canceled' ? 'status-canceled' : 'status-delivered') %>">
                <%= obj.status %>
              </span>
            </div>

          </div>
          
          <div class="details-section">
            <div class="section-header">Customer Information</div>
            <div class="details-item">
              <strong>Name:</strong> <%= obj.name %>
            </div>
            <div class="details-item">
              <strong>Phone:</strong> <%= obj.phone %>
            </div>
            <div class="details-item">
              <strong>Email:</strong> <%= obj.email %>
            </div>
            <div class="details-item">
              <strong>Address:</strong> <%= obj.address %>
            </div>
            <div class="details-item">
              <strong>Town:</strong> <%= obj.town %>
            </div>
            <div class="details-item">
              <strong>Pincode:</strong> <%= obj.pincode %>
            </div>
          </div>
  
          <div class="details-section" id="klkl">
            <div class="section-header">Product Images</div>
            <div class="images-container" style="height: 100px;">
              <img src="/productImages/<%= obj.image1 %>" alt="Image 1 ">
              <img src="/productImages/<%= obj.image2 %>" alt="Image 2 ">
              <img src="/productImages/<%= obj.image3 %>" alt="Image 3 ">
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <%- include('./layouts/footer.ejs') %>
  