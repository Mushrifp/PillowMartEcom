<link rel="stylesheet" href="/node_modules/sweetalert2/dist/sweetalert2.min.css">
<script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('dashboardChart').getContext('2d');
        let chart;
        const monthlyBtn = document.getElementById('monthlyBtn');
        const yearlyBtn = document.getElementById('yearlyBtn');
    
        async function fetchData(endpoint) {
            try {
                const response = await fetch(endpoint);
                return await response.json();
            } catch (error) {
                console.error('Error fetching data:', error);
                return null;
            }
        }
    
        function createChart(labels, data, title) {
            if (chart) {
                chart.destroy();
            }
    
            let gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(0, 0, 0, 0.358)');
            gradient.addColorStop(1, 'rgba(0, 0, 0, 0.358)');
    
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Orders',
                        data: data,
                        fill: true,
                        backgroundColor: gradient,
                        borderColor: 'rgba(0, 0, 0, 1)',
                        borderWidth: 2,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: true,
                            labels: {
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        title: {
                            display: true,
                            text: title
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: true,
                                color: 'rgba(0, 0, 0, 0.1)'
                            },
                            title: {
                                display: true,
                                text: 'Time Period'
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                display: true,
                                color: 'rgba(0, 0, 0, 0.1)'
                            },
                            title: {
                                display: true,
                                text: 'Order Count'
                            }
                        }
                    }
                }
            });
        }
    
        async function loadYearlyData() {
            const orderData = await fetchData('/dashboardOrderChart');
            if (orderData) {
                const years = orderData.map(entry => entry._id);
                const counts = orderData.map(entry => entry.count);
                createChart(years, counts, 'Yearly Order Data');
                monthlyBtn.style.display = 'inline-block';
                yearlyBtn.style.display = 'none';
            }
        }
    
        async function loadMonthlyData() {
            const monthlyData = await fetchData('/dashboardOrderChartMonthly');
            if (monthlyData) {
                const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                const months = monthlyData.map(entry => monthNames[entry._id - 1]);
                const counts = monthlyData.map(entry => entry.count);
                createChart(months, counts, `Monthly Order Data for ${new Date().getFullYear()}`);
                monthlyBtn.style.display = 'none';
                yearlyBtn.style.display = 'inline-block';
            }
        }
    

        loadYearlyData();
    
        monthlyBtn.addEventListener('click', loadMonthlyData);
        yearlyBtn.addEventListener('click', loadYearlyData);
    });
    </script>