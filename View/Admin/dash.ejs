<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    var notyf = new Notyf();
    
    
    function logFilterSelection(filterType,selectedValue){
        const OrderHIdden = document.getElementById("OrderHIdden");
        const data = JSON.parse(OrderHIdden.value);
        console.log(data)
        axios.post(`/admin/filter`, {
            filterType: filterType,
            filterValue: selectedValue,
            data: data
        })
        .then(response =>{

             if(response.data.NoData){
                console.log("coming")
                notyf.error("Not Data Found")
             }else{
                OrderHIdden.value = JSON.stringify(response.data);
                console.log("---")
                updateOrderTable(response.data);
             }
        })
        .catch(error => {
            console.error(error);
        });
    }
    
    function updateOrderTable(filteredOrders) {
    const tableBody = document.getElementById('ordersTable');
    tableBody.innerHTML = ''; 

    filteredOrders.forEach(order => {
        const row = document.createElement('tr');
        row.innerHTML = `
            <td>${order.name}</td>
            <td>${order.productName}</td>
            <td>$${order.Total}</td>
            <td>${order.paymentStatus == "Paid" ? '<span class="badge bg-success-light text-success">Paid</span>' : '<span class="badge badge-soft-danger text-danger">Not paid</span>'}</td>
            <td><i class="material-icons md-payment font-xxl text-muted"></i> ${order.paymentMethod}</td>
            <td><i class="font-xxl text-muted"></i> ${order.Status}</td>
            <td><a href="/admin/viewOrder?id=${order.ID}&user=${order.user}&page=dash" class="btn btn-outline-primary btn-sm">View details</a></td>
        `;
        tableBody.appendChild(row);
    });
}

