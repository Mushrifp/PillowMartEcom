<style>
    .image-preview {
        margin-top: 10px;
        max-width: 200px;
        max-height: 200px; 
        overflow: hidden;
    }

    .preview-image {
        width: 100%;
        height: auto;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 100px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 600px; 
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

   
    .cropper-container {
        max-width: 100%;
        max-height: 400px;
        margin: 0 auto; 
    }

    #imageToCrop {
        max-width: 100%;
        max-height: 300px;
    }
</style>


<link href="https://unpkg.com/cropperjs/dist/cropper.css" rel="stylesheet">
<script src="https://unpkg.com/cropperjs/dist/cropper.js"></script>

<%- include('./layouts/header.ejs') %>

<main class="main-wrap">
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                </div>
            </div>
        </div>
        <form action="/admin/addProduct" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_title" class="form-label">Product title</label>
                                <input type="text" placeholder="Type here" class="form-control" id="title" name="title" required value="<%= typeof title !== "undefined" ? title : "" %>" />
                            </div>
                            <div>
                                <label class="form-label">Description</label>
                                <input type="text" placeholder="Type here" class="form-control" name="description" required  value="<%= typeof description !== "undefined" ? description : "" %>" />
                            </div>
                            <div>
                                <label class="form-label">Images 1</label>
                                <input class="form-control" type="file" name="images" accept="image/*" required data-preview-id="imagePreview1" />
                                <div class="image-preview" id="imagePreview1"></div>
                            </div>
                            <div>
                                <label class="form-label">Images 2</label>
                                <input class="form-control" type="file" name="images" accept="image/*" required data-preview-id="imagePreview2" />
                                <div class="image-preview" id="imagePreview2"></div>
                            </div>
                            <div>
                                <label class="form-label">Images 3</label>
                                <input class="form-control" type="file" name="images" accept="image/*" required data-preview-id="imagePreview3" />
                                <div class="image-preview" id="imagePreview3"></div>
                            </div>

                            <% if(typeof message !== "undefined") { %>
                                <h4 style="color: rgb(0, 153, 255);" ><%= message %></h4>
                            <% } %>

                        </div>
                    </div>
                    <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label class="form-label">Price</label>
                                <input type="number" placeholder="Type here" class="form-control" name="price" required value="<%= typeof price !== "undefined" ? price : "" %>"/>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Stock</label>
                                <input type="number" placeholder="Type here" class="form-control" name="stock" required value="<%= typeof stock !== "undefined" ? stock : "" %>"/>
                            </div>
                            <h5 class="mb-3">Size</h5>
                            <select class="form-control" name="size" required>
                                <option value="">Select Size</option>
                                <option value="small">Small</option>
                                <option value="medium">Medium</option>
                                <option value="large">Large</option>
                            </select>
                            <br>
                            <h5 class="mb-3">Categories</h5>
                            <select class="form-control" name="category" required>
                                <option value="">Select Category</option>
                                <% categoryData.forEach(category => { %>
                                    <option value="<%= category.name %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-md rounded font-sm hover-up">Create</button>
                                <button class="btn btn-md rounded font-sm hover-up"><a href="/admin/product" style="color: black;" >Go Back</a></button>
                            </div>
                        </div>
                    </div>
                    <!-- card end// -->
                </div>
            </div>
        </form>
    </section>
    
    <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
            <div class="col-sm-6">
                <script>
                    document.write(new Date().getFullYear());
                </script>
                &copy; Nest - HTML Ecommerce Template .
            </div>
            <div class="col-sm-6">
                <div class="text-sm-end">All rights reserved</div>
            </div>
        </div>
    </footer>
</main>

<!-- Cropper Modal -->
<div id="cropperModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Crop Image</h2>
        <div>
            <img id="imageToCrop" style="max-width: 100%;">
        </div>
        <button id="cropImageBtn" class="btn btn-primary mt-3">Crop & Save</button>
    </div>
</div>

<script>
    let cropper;
    let currentFileInput;

    document.querySelectorAll('input[type="file"]').forEach(function(input){
        input.addEventListener('change', function(event){
            currentFileInput = this;
            const file = event.target.files[0];
            const reader = new FileReader();
            
            reader.onload = function(e){
                const image = document.getElementById('imageToCrop');
                image.src = e.target.result;
                showCropperModal();
            };
            
            reader.readAsDataURL(file);
        });
    });

    function showCropperModal() {
        const modal = document.getElementById('cropperModal');
        modal.style.display = "block";

        const image = document.getElementById('imageToCrop');
        cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 2
        });
    }

    function closeCropperModal() {
        const modal = document.getElementById('cropperModal');
        modal.style.display = "none";
        cropper.destroy();
        cropper = null;
    }

    document.getElementsByClassName('close')[0].onclick = function() {
        closeCropperModal();
    };

    window.onclick = function(event) {
        const modal = document.getElementById('cropperModal');
        if (event.target == modal) {
            closeCropperModal();
        }
    };

    document.getElementById('cropImageBtn').onclick = function() {
        const canvas = cropper.getCroppedCanvas({
            width: 200,
            height: 200,
        });
        
        canvas.toBlob(function(blob) {
            const url = URL.createObjectURL(blob);
            const imagePreviewId = currentFileInput.getAttribute('data-preview-id');
            const imagePreview = document.getElementById(imagePreviewId);
            const imgElement = document.createElement('img');
            imgElement.src = url;
            imgElement.className = 'preview-image';
            imagePreview.innerHTML = '';
            imagePreview.appendChild(imgElement);

            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(new File([blob], 'cropped_image.png'));
            currentFileInput.files = dataTransfer.files;

            closeCropperModal();
        });
    };
</script>

