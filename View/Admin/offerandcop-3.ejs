<%- include('./layouts/header.ejs') %>
<main class="main-wrap">
    <section class="content-main">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="content-title">Offers and Coupons</h2>
                <br>
                <% if(typeof message != 'undefined'){ %>
                        <h3 style="color: red;">Deleted </h3>
                <% } %>  
                <br>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                           <h3>Existing Coupons</h3> 
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Code</th>
                                        <th>Description</th>
                                        <th>Discount</th>
                                        <th>Count</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   <% for (let i = 0; i < coupons.length; i++){ %>
                                    
                                    <tr>
                                        <td><%= coupons[i].name %></td>
                                        <td><%= coupons[i].code %></td>
                                        <td><%= coupons[i].description %></td>
                                        <td><%= coupons[i].discount %></td>
                                        <td><%= coupons[i].count %></td>
                                        <td><%= coupons[i].startDate %></td>
                                        <td><%= coupons[i].endDate %></td>
                                        <td>
                                            <a style="background-color: white;" href="/admin/editCoupon?id=<%= coupons[i]._id %>"><button class="btn btn-sm btn-primary">Edit</button></a>
                                            <a style="background-color: rgb(125, 0, 0);" href="/admin/deleteCoupon?id=<%= coupons[i]._id %>"><button  class="btn btn-sm btn-primary" style="background-color: rgb(204, 51, 0);">Delete</button></a>
                                        </td> 
                                    </tr>
                                   <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- Add New Coupon Button -->
                        <a href="/admin/addcoupon"><button class="btn btn-primary float-start">Add New Coupon</button></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-4">                   
                    <div class="card-body">
                        <!-- Existing Offers Section -->
                        <div class="table-responsive">
                            <h3>Existing Offers</h3>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Discount</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < offers.length; i++) { %>
                                        <tr>
                                            <td><%= offers[i].name %></td>
                                            <td><%= offers[i].description %></td>
                                            <td><%= offers[i].discount %></td>
                                            <td><%= offers[i].startDate %></td>
                                            <td><%= offers[i].endDate %></td>
                                            <td>
                                                <a style="background-color: white;" href="/admin/editoffer?id=<%= offers[i]._id %>"><button class="btn btn-sm btn-primary">Edit</button></a>
                                                <a style="background-color: rgb(255, 255, 255);" href="/admin/OffApply?id=<%= offers[i]._id %>"><button  class="btn btn-sm btn-primary" >Product</button></a>
                                                <a style="background-color: rgb(255, 255, 255);" href="/admin/addOfferTOCategory?id=<%= offers[i]._id %>"><button  class="btn btn-sm btn-primary" >category</button></a>
                                                <a style="background-color: rgb(125, 0, 0);" href="/admin/deleteOffer?id=<%= offers[i]._id %>"><button  class="btn btn-sm btn-primary" style="background-color: rgb(204, 51, 0);">Delete</button></a>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <!-- Add New Offer Button -->
                        <a href="/admin/addoffer"><button class="btn btn-primary float-start">Add New Offer</button></a>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
            <div class="col-sm-6">
                <script>
                    document.write(new Date().getFullYear());
                </script>
                &copy; Nest - HTML Ecommerce Template .
            </div>
            <div class="col-sm-6">
                <div class="text-sm-end">All rights reserved</div>
            </div>
        </div>
    </footer>
</main>
<%- include('./layouts/footer.ejs') %>


