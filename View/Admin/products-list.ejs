<%- include('./layouts/header.ejs') %>
<main class="main-wrap">
    <section class="content-main">
        <div class="content-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="content-title card-title">Products List</h2>
                <div class="d-flex">
                    <a href="/admin/addproduct" class="btn btn-primary btn-sm rounded" style="margin-left: 600px;" >Create new</a>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Images & Title</th>
                                <th scope="col">Price</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Size</th>
                                <th scope="col" class="text-end" style="padding-right: 40px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(productData.length == 0) { %>
                                <tr>
                                    <td colspan="6" class="text-center">No products available</td>
                                </tr>
                            <% } else { %>
                                <% for (let i = 0; i < productData.length; i++) { %>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <div class="itemside">
                                                <div class="left">
                                                    <img src="productImages/<%= productData[i].image[0] %>" class="img-sm img-thumbnail" alt="Item" />
                                                </div>
                                                <div class="info">
                                                    <h6 class="mb-0"><%= productData[i].productTitle %></h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$<%= productData[i].price %></td>
                                        <td><%= productData[i].stock %></td>
                                        <td><%= productData[i].size %></td>
                                        <td class="text-end">
                                            <a  href="/admin/editProduct?id=<%= productData[i]._id %>" class="btn btn-sm font-sm rounded btn-brand"> <i class="material-icons md-edit"></i> Edit </a>
                                            <a  href="/admin/deleteProduct?id=<%= productData[i]._id %>" class="btn btn-sm font-sm btn-light rounded"> <i class="material-icons md-delete_forever"></i> Delete </a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- content-main end// -->
    <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
            <div class="col-sm-6">
                <script>
                    document.write(new Date().getFullYear());
                </script>
                &copy; Nest - HTML Ecommerce Template .
            </div>
            <div class="col-sm-6">
                <div class="text-sm-end">All rights reserved</div>
            </div>
        </div>
    </footer>
</main>
<script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
<script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
<script src="/assets/js/vendors/select2.min.js"></script>
<script src="/assets/js/vendors/perfect-scrollbar.js"></script>
<script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
<!-- Main Script -->
<script src="/assets/js/main.js" type="text/javascript"></script>
</body>
</html>
