<!--================Cart Area =================-->
<section class="cart_area section_padding">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <% if(typeof empty == 'undefined'){ %>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Cart</th>
                                <th scope="col">Action</th>
                            </tr>
                        <% } %>

                    </thead>
                    
                        <% if (typeof wishlist != 'undefined') { %>
                            <tbody>
                            <% for (var i = 0; i < wishlist.length; i++) { %>
                                <tr>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                              <a href="/single-product?id=<%= wishlist[i]._id %>"><img src="/productImages/<%= wishlist[i].image[0] %>"  alt="image" /></a>
                                            </div>
                                            <div class="media-body">
                                                <p><%= wishlist[i].productTitle %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>$<%= wishlist[i].price %></h5>
                                    </td>
                                    <td>
                                        <% if (wishlist[i].stock === 0) { %>
                                            <button style="background-color: rgb(163, 5, 5); color: #ffffff;" class="btn_3" disabled>Out of Stock</button>
                                          <% } else { %>
                                            <button class="btn_3 addToCartButton" value="<%= wishlist[i]._id %>">Add to cart</button>
                                          <% } %>
                                    </td>
                                    <td>
                                      <a class="btn_1" href="/cart/wishDelete?id=<%= wishlist[i].id %>">Remove</a>
                                   </td>
                                </tr>
                            <% } %>
                        </tbody>
                        <% }else if(typeof empty != 'undefined'){ %>
                                <h2>Your wishlist is empty</h2>
                        <% } %>
                    
                </table>
                <div class="checkout_btn_inner float-right">
                    <a class="btn_1" href="/product">Go To Shopping</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Cart Area =================-->

