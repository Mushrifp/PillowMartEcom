                    <div class="form-container" >
                        <h2 style="margin-top: -20px; margin-left: -15px;">Edit Address</h2>
                        <button type="button" class="btn btn-primary mb-3">
                            <a style="color: rgb(255, 255, 255);" href="/user/loadAddAddress">Add Address</a>
                        </button>
                        <div class="address-boxes mt-4">
                            <% if (typeof Data != 'undefined') { %>
                                <% Data.forEach(function(address, index) { %>
                                    <div class="address-box mb-3 p-3 border rounded" id="address-box-<%= index %>">
                                        <h3 class="mb-1" ><%= address.Bname %></h3>
                                        <div class="button-container d-flex justify-content-end">
                                            <button type="button" class="btn btn-secondary me-2"><a style="color: rgb(255, 255, 255);" href="/user/editAddress?Code=<%= address.Code %>">Edit</a></button>
                                            <button type="button" class="btn btn-danger"><a style="color: rgb(255, 255, 255);" href="/user/removeAddress?Code=<%= address.Code %>">Remove</a></button>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else if (NoData) { %>
                                <h4 class="text-danger">No Address Added</h4>
                            <% } %>
                        </div>
