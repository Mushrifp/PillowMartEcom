                <% } %>
                <div class="form-group">
                    <div class="details-section">
                        <button style="background-color: #4CAF50;"><a href="/user/order" style="color: rgb(255, 255, 255); ">Go Back</a></button>
                        <% if (obj.paymentStatus == false) { %>
                            <button style="background-color: #5abaff;"><a href="/user/profile" style="color: rgb(255, 255, 255); ">Pay Online</a></button>
                          <% } %>
                        <h1>Order Details</h1>
                        <div class="details-item"><strong>Ordered:</strong> <%= obj.ordered %></div>
                        <div class="details-item"><strong>Delivery:</strong> <%= obj.delivery %></div>
                        <br>
                        <div class="section-title">Product Details</div>
                        <div class="details-item"><strong>Title:</strong> <%= obj.title %></div>
                        <div class="details-item"><strong>Description:</strong> <%= obj.description %></div>
                        <div class="details-item"><strong>Price:</strong> $<%= obj.price %></div>
                        <div class="details-item"><strong>Category:</strong> <%= obj.category %></div>
                        <div class="details-item"><strong>Size:</strong> <%= obj.size %></div>
                        <div class="details-item"><strong>Quantity:</strong> <%= obj.quantity %></div>
<br>
                        <div class="section-title">Payment & Delivery</div>
                        <div class="details-item">
                            <strong>Status:</strong> 
                            <span class="status <%= obj.status === 'Pending' ? 'status-pending' : (obj.status === 'Canceled' ? 'status-canceled' : 'status-delivered') %>">
                                <%= obj.status %>
                            </span>
                        </div>
                        <div class="details-item"><strong>Cash:</strong> $<%= obj.cash %></div>
                        <div class="details-item"><strong>Payment Method:</strong><%= obj.paymentMethod %></div>
                        <div class="details-item"><strong>Payment Status:</strong> <%= obj.paymentStatus ? 'Paid' : 'Not paid' %></div>
<br>
                        <div class="section-title">Customer Information</div>
                        <div class="details-item"><strong>Name:</strong> <%= obj.name %></div>
                        <div class="details-item"><strong>Business Name:</strong> <%= obj.Bname %></div>
                        <div class="details-item"><strong>Phone:</strong> <%= obj.phone %></div>
                        <div class="details-item"><strong>Email:</strong> <%= obj.email %></div>
                        <div class="details-item"><strong>Address:</strong> <%= obj.address %></div>
                        <div class="details-item"><strong>Town:</strong> <%= obj.town %></div>
                        <div class="details-item"><strong>Pincode:</strong> <%= obj.pincode %></div>
<br>
                        <div class="section-title">Product Images</div>
                        <div class="details-item">
                            <img src="/productImages/<%= obj.image1 %>" alt="Image 1">
                            <img src="/productImages/<%= obj.image2 %>" alt="Image 2">
                            <img src="/productImages/<%= obj.image3 %>" alt="Image 3">
