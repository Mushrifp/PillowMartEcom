<script>

    
    document.addEventListener('DOMContentLoaded', function() {
        var invoiceButton = document.getElementById('invoiceButton');
        var invoiceModalElement = document.getElementById('invoiceModal');
        var invoiceModal = new bootstrap.Modal(invoiceModalElement);
        
        invoiceButton.addEventListener('click', function() {
            Swal.fire({
                title: 'Order Invoice',
                text: 'Would you like to view the invoice or download it as a PDF?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'View',
                cancelButtonText: 'Download',
                showCloseButton: true,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    
                    invoiceModal.show();
                } else if (result.dismiss === Swal.DismissReason.cancel) {
      
                    const invoiceElement = document.getElementById('Invoice');
                    html2pdf(invoiceElement, {
                        margin: 1,
                        filename: 'Invoice.pdf',
                        image: { type: 'jpeg', quality: 0.98 },
                        html2canvas: { scale: 2 },
                        jsPDF: { unit: 'in', format: 'letter' }
                    }).then(() => {
                        Swal.fire(
                            'Downloading',
                            'Your invoice is being downloaded.',
                            'success'
                        );
                    });
                }
            });
        });
    });
</script>
    

    
  <script>  
    function payLater(data){

        let p = {
            iD:data
        }

        Swal.fire({
                title: 'Pillow Mart',
                text: 'Would you like to pay with Wallet  or Razorpay?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Wallet',
                cancelButtonText: 'Razorpay',
                showCloseButton: true,
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // wallet
                    
                    Swal.fire({
                       title: 'Are You Sure',
                       icon: 'question',
                       showCancelButton: true,
                       confirmButtonColor: '#3085d6',
                       cancelButtonColor: '#FF0000',
                       confirmButtonText: 'Yes',
                       cancelButtonText: 'No',
                       showCloseButton: true,
                       reverseButtons: true
                    }).then((result) => {
                       if (result.isConfirmed) {
                     
                        axios.post("/user/payLaterWallet",p)
                          .then((response)=>{
                              
                            if(response.data.failed){
                          
                              let data = response.data.failed;
                          
                                const message = ` Your current balance is $${data.userBalance.toFixed(2)}`;
                              Swal.fire({
                              title: 'Insufficient Balance',
                              text:message,
                              icon: 'error',
                              confirmButtonColor: '#3085d6',
                              confirmButtonText: 'Ok',
                          })   
                            }else{    
                          
                              Swal.fire({
                                 title: 'Payment Successful',
                                 text: 'Your payment has been processed successfully.',
                                 icon: 'success',
                                 confirmButtonText: 'OK',
                                 confirmButtonColor: '#3085d6',
                                 allowOutsideClick: false, 
                                 allowEscapeKey: false
                                             }).then((result) => {
                                 if (result.isConfirmed) {
                                      window.location.reload()
                                  }
                                 });
                          
                              }
                              
                          }).catch((error)=>{
                              console.log(error)
                          })                      
                        }
                       });
                    
                } else if (result.dismiss === Swal.DismissReason.cancel) {
      
                //    raz
                axios.post("/user/payLaterOnline",p)
            .then((response)=>{

                if(response.data.razo){

                    const orderData = response.data;
                        
                            const options = {
                                key: `${orderData.razoID}`,
                                amount: orderData.razo.amount,
                                currency: orderData.razo.currency,
                                name: 'Pillow Mart',
                                description: "Transaction",
                                order_id: orderData.razo.id,
                                handler: async function (response) {
                                    let ids={
                                        id:orderData.orderInfo
                                    }
                                       axios.post("/user/razpayOrderPlace",ids)
                                       .then((response)=>{
                                             if(response.data.done){
                                                Swal.fire({
                                                     title: 'Payment Successful',
                                                     text: 'Your payment has been processed successfully.',
                                                     icon: 'success',
                                                     confirmButtonText: 'OK',
                                                     confirmButtonColor: '#3085d6',
                                                     allowOutsideClick: false, 
                                                     allowEscapeKey: false
                                                                    }).then((result) => {
                                                     if (result.isConfirmed) {
                                                          window.location.reload()
                                                      }
                                                    }) 
                                             }
                                       }).catch((error)=>{
                                         console.log(error)
                                       })
                                    
                                },
                                "prefill": {
                                     "name": "Mushrf",
                                     "email": "g@example.com",
                                     "contact": "9000090000"
                                },
                                theme: {
                                    color: '#B08EAD'
                                }
                            };
                            
                            const rzp = new Razorpay(options);

                            rzp.open();
                             
                     
