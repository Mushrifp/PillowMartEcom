<style>
    .form-group {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}

.details-section {
    background-color: #fff;
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    width: 100%;
}

.details-section h1 {
    text-align: center;
    color: #9e0000;
    margin-bottom: 20px;
}

.details-item {
    margin-bottom: 15px;
    display: flex;
    justify-content: space-between;
}

.details-item strong {
    width: 150px;
}

.details-item img {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 130px;
    height: 130px;
}

.details-section .highlight {
    color: #4CAF50;
    font-weight: bold;
}

.details-section .status {
    padding: 5px 10px;
    border-radius: 5px;
    color: #fff;
    display: inline-block;
}

.status-pending {
    background-color: #FFA500;
}

.status-canceled {
    background-color: #FF4500;
}

.status-delivered {
    background-color: #4CAF50;
}

.section-title {
    color: #1479c7;
    font-weight: bold;
    margin-top: 20px;
    margin-bottom: 10px;
    border-bottom: 2px solid #000000;
    padding-bottom: 5px;
}

</style>
