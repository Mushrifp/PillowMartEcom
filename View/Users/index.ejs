                        const priceNumberOfSlides = Math.ceil(priceTotalItems / priceItemsPerSlide);
        
                        for (let priceSlideIndex = 0; priceSlideIndex < priceNumberOfSlides; priceSlideIndex++) {
                            let priceStartIndex = priceSlideIndex * priceItemsPerSlide;
                            let priceEndIndex = Math.min(priceStartIndex + priceItemsPerSlide, priceTotalItems);
                        %>
                            <div class="carousel-item <%= priceSlideIndex === 0 ? 'active' : '' %>">
