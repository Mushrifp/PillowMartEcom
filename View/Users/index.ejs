    <div class="container mt-5">
        <!-- First Section: Carousel -->
        <% if(typeof relateCategory != 'undefined' && relateCategory.length != 0){ %>
    
            <section id="carouselSection" class="py-5 bg-light product-carousel">
                <div class="container">
                    <h2 class="text-center mb-4">Best Selling Products</h2>
                    <div id="productCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <% 
                            const itemsPerSlide = 4;
                            const totalItems = relateCategory.length;
                            const numberOfSlides = Math.ceil(totalItems / itemsPerSlide);
            
                            for (let slideIndex = 0; slideIndex < numberOfSlides; slideIndex++) {
                                let startIndex = slideIndex * itemsPerSlide;
                                let endIndex = Math.min(startIndex + itemsPerSlide, totalItems);
                            %>
                                <div class="carousel-item <%= slideIndex === 0 ? 'active' : '' %>">
                                    <div class="card-deck">
                                        <% for (let i = startIndex; i < endIndex; i++) { %>
                                            <div class="card shadow-sm">
                                                <a href="/single-product?id=<%= relateCategory[i]._id %>">
