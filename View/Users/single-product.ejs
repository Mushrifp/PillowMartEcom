                </div>
                <div class="reply-form">
                    <textarea placeholder="Write your reply..."></textarea>
                    <button onclick="submitReply(this)">Submit Reply</button>
                </div>
                <div class="reply-list"></div>
            `;
            reviewsList.prepend(newReview);
            $('#addCommentModal').modal('hide');
            document.getElementById('newCommentText').value = '';
        }
    }

    function likeReview(button) {
        button.classList.toggle('liked');
        const likeCount = button.querySelector('.like-count');
        let count = parseInt(likeCount.textContent);
        if (button.classList.contains('liked')) {
            likeCount.textContent = count + 1;
        } else {
            likeCount.textContent = count - 1;
        }
    }

    function showReplyForm(button) {
        const reviewCard = button.closest('.review-card');
        const replyForm = reviewCard.querySelector('.reply-form');
        replyForm.style.display = replyForm.style.display === 'none' ? 'block' : 'none';
    }

    function submitReply(button) {
        const reviewCard = button.closest('.review-card');
        const replyText = reviewCard.querySelector('.reply-form textarea').value;
        if (replyText.trim() !== '') {
            const replyList = reviewCard.querySelector('.reply-list');
            const newReply = document.createElement('div');
            newReply.className = 'reply-card';
            newReply.innerHTML = `
                <div class="review-content">
                    <p class="review-comment">${replyText}</p>
                    <p class="review-author">- Reply User</p>
                </div>
                <div class="review-actions">
                    <button class="btn-delete" onclick="deleteReview(this)">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </div>
            `;
            replyList.appendChild(newReply);
            reviewCard.querySelector('.reply-form textarea').value = '';
            reviewCard.querySelector('.reply-form').style.display = 'none';
        }
    }

    function deleteReview(button) {
        const reviewCard = button.closest('.review-card') || button.closest('.reply-card');
        if (confirm('Are you sure you want to delete this comment?')) {
            reviewCard.remove();
        }
    }
</script>
