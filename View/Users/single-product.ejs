<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    var notyf = new Notyf();
    document.querySelectorAll('.product_img_slide .single_product_img img').forEach(function(element) {
        new Drift(element, {
            paneContainer: document.querySelector('.product_img_slide'),
            inlinePane: false,
            zoomFactor: 3
        });
    });

    const mainProductImage = document.querySelector('.main-product-image');
    const thumbImages = document.querySelectorAll('.thumb-image');

    thumbImages.forEach(thumbImage =>{
        thumbImage.addEventListener('click',()=>{
            mainProductImage.src = thumbImage.src;
            mainProductImage.dataset.zoom = thumbImage.src;
        });
    });

document.getElementById("wishButton").addEventListener("click",function(event){
    
     axios.post("/cart/addToWishlist?id=<%= singleData._id %>")
     .then(function(response){
            if(response.data.added){
                notyf.success('Added Success');
            }else if(response.data.failed){
                 notyf.error('Not Added');
            }else if(response.data.notAdded){
                 notyf.error('You Need To Login');
            }
          })
          .catch(function(error){
            console.error('Error:',error);
          });
})

document.getElementById("cartButton").addEventListener("click",function(event){
    
    axios.post("/cart/addCart?id=<%= singleData._id %>")
    .then(function(response){
           if(response.data.added){
               notyf.success('Added Success');
           }else if(response.data.failed){
                notyf.error('Not Added');
           }else if(response.data.notAdded){
                notyf.error('You Need To Login');
           }
         })
         .catch(function(error){
           console.error('Error:',error);
         });
})

</script>


