<section class="breadcrumb_part" style="height: 100px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2  id="RvText">Product Details</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- product details part start-->
<section class="about_us padding_top padding_bottom padding_left">
    <div class="container"  style="border-radius: 10px;" >
        <div class="row">
            <div class="col-md-6">
                <div class="row" > 
                    <div class="col-md-9"   >
                        <div class="product_img_slide owl-carousel"  >
                            <% for (let i = 0; i < singleData.image.length; i++) { %>
                                <div class="single_product_img">
                                    <img style="height: 380px; width: 480px; margin-top: 10px; " src="/productImages/<%= singleData.image[i] %>"  class="img-fluid main-product-image" data-zoom="productImages/<%= singleData.image[i] %>">
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-md-3" style="background-color: rgb(255, 255, 255); " >
                        <div class="product_thumbnail mt-2">
                            <% for (let i = 0; i < singleData.image.length; i++) { %>
                                <div class="single_thumbnail_img">
                                    <img src="/productImages/<%= singleData.image[i] %>" alt="thumbnail" class="img-thumbnail thumb-image" style="height: 100px; width: 120px;">
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="background-color:rgb(255, 255, 255); ">
                <div class="single_product_details" style="padding-left: 100px;">
                    <h1 style="margin-top: 30px;" ><%= singleData.productTitle %></h1>
                    <div class="rating_area">
                        <div class="average_rating" style="color: rgb(252, 108, 56);">
                            <span>Average Rating:</span>
                            <span class="rating_value">4</span>
                            <span class="rating_value">/</span>
                            <span class="rating_value">5</span>
                        </div>
                    </div>
                    <div class="product_info">
                        <p><strong>Price: $</strong> 
                                    <% if(singleData.offPrice && singleData.offPrice != 0){ %>
                                        <h4 class="mb-1 me-1" style="display: inline;">$<%= singleData.offPrice %></h4>
                                        <del class="mb-1 me-1" style="color: rgb(6, 79, 6); font-size: medium; margin-left: 5px; display: inline;">$<%= singleData.price %></del>
                                    <% }else{ %>
                                        <h4 class="mb-1 me-1">$<%= singleData.price %></h4>
                                     <% } %>   
                                    </p>
                                    <p><strong>Available Stock:</strong> 
                                        <span >
                                            <% if (singleData.stock === 0) { %>
                                                <span style="color: red;">Out of stock</span>
                                            <% } else if (singleData.stock <= 5) { %>
                                               <span style="color: red;">Only a few left! Hurry up!</span>
                                            <% } else { %>
                                                <span style="color: green;">In Stock</span>
                                            <% } %>
                                        </span>
                                    </p>

                                        <% if(singleData.percentage != 0){ %>

                                            <p><strong>Discount:</strong> <span class="ms-2 badge bg-success text-white   " ><%= singleData.percentage %>% Offer</span ></p>

                                        <% }else{  %>
                                    <p><strong>Discount:</strong> <span >No Offer</span ></p>
                                                                        
                                           <% } %> 
                                    
                                </div>
                                <div>                                    
                                    <p><strong>Specification:</strong></p>
                                    <p>>High quality</p>
                                    <p><strong>Category:</strong></p>
                                    <p>><%= singleData.category %></p>  
                                    <p><strong>Size:</strong></p>
                                    <p>><%= singleData.size %></p>                            
                                </div>
                            </div>
                            
                        </div>
                        <div class="add_to_cart" style="margin-top: 25px; margin-left: 25%; " >
                                <button id="wishButton" class="btn_3" >Add to Wishlist</button>
                                
                                <% if (singleData.stock === 0) { %>
                               
                                <button style="background-color: rgb(163, 5, 5); margin-left: 10px; color: #ffffff;" class="btn_3" disabled  >Out of Stock</button>                                    
                                <% } else { %>
                               
                                <button id="cartButton" style="margin-left: 10px;" class="btn_3" >Add to cart</button>                                      
                                <% } %> 
                                <a href="/product" style="margin-left: 10px;" class="btn_3">GO to product</a> 
                            </div>
                        <div class="product_description">
                            <br>
                            <p><strong>Description:</strong><br> <%= singleData.description %></p>
                        </div>
                    </div>
                </div>
            </section>

<!-- product details part end-->

